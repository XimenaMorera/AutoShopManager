@page
@model AutoShopManager.Pages.Partes.DeleteModel
@{
	ViewData["title"] = "Delete";
}
<h1>Parte</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Partes</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Parte.Nombre)

		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Parte.NumeroParte)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Parte.Precio)

		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Parte.Stock)
		</dd>	
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Parte.Proveedor)
		</dd>	
	</dl>
	<form method="post">
		<input type="hidden" asp-for="Parte.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-page="./index" class"btn btn-prymary">Back to list</a>
	</form>
</div>
